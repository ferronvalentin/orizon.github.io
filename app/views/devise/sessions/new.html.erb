<div class="connexion-form">
  <div class="container">
      <div class="row">
        <div class="col-xs-12 col-sm-4 col-sm-offset-4">
          <div class="form">
            <h2>Connectez-vous</h2>
            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email, placeholder: "Email", required: false, autofocus: false, label: false %>
                <%= f.input :password, placeholder: "Mot de passe", required: false, label: false %>
                <%#= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
              </div>
              <div class="form-actions">
                <%= f.button :submit, "Connexion", class: "btn-publish" %>
              </div>
            <% end %>
            <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
  <div class="connexion-form-footer">
    Vous n'avez pas de compte ? <%= link_to "Nous contacter" %>
  </div>
</div>
