  <!-- Logo -->


  <!-- Right Navigation -->
  <div class="navbar-orizon-right hidden-xs hidden-sm">

    <% if user_signed_in? %>

      <!-- Links when logged in -->
      <%#= link_to "Traitements", "#", class: "navbar-orizon-item navbar-orizon-link" %>
      <%#= link_to "Responsable", "#", class: "navbar-orizon-item navbar-orizon-link" %>
      <%#= link_to "Déconnexion", "#", class: "navbar-orizon-item navbar-orizon-link" %>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-orizon-item">
        <div class="dropdown">
          <%= image_tag "https://image.flaticon.com/icons/png/512/306/306473.png", class: "avatar dropdown-toggle", id: "navbar-orizon-menu", "data-toggle" => "dropdown" %>
          <%= link_to (current_user.first_name), "#", class: "navbar-orizon-item navbar-orizon-link dropdown-toggle", id: "navbar-orizon-menu", "data-toggle" => "dropdown" %>

          <ul class="dropdown-menu dropdown-menu-right navbar-orizon-dropdown-menu">
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to "#" do %>
                <i class="fa fa-cog"></i>  <%= t(".settings", default: "Réglages") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Déconnexion") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      
    <% end %>
  </div>

